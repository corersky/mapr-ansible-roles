#!/bin/sh

/opt/mapr/server/configure.sh -M7 \
	-C {% for node in groups['cldb'] -%}{{ hostvars[node].ansible_default_ipv4.address }},{% endfor %} \
	-Z {% for node in groups['zookeepers'] -%}{{ hostvars[node].ansible_default_ipv4.address }},{% endfor %} \
	-N {{cluster_name}} {% if ansible_virtualization_role == "guest" %}--isvm{% endif %} \
	-du {{metrics_user}} -dp {{metrics_password}} -d {{hostvars[metrics_host].ansible_default_ipv4.address}}